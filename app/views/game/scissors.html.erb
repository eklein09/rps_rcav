

<div class="container">

  <hr class="featurette-divider">

  <div class="row">
    <div class="col-sm-12">

     <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">Play Rock</button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">Play Paper</button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">Play Scissors</button>
      </div>
    </div>
  </div>

</div>

<hr class="featurette-divider">

<div class="row">
  <div class="col-sm-offset-2 col-sm-4">

    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Scissors</h3>
      </div>
      <div class="panel-body">
        <img src="/assets/images/scissors.png" class="img-responsive" alt="scissors_image">
      </div>
    </div>

  </div>
  <div class="col-sm-4">

    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @computer_move.capitalize %></h3>
      </div>
      <div class="panel-body">
        <img src=<%="/assets/images/#{@computer_move}.png" %> class="img-responsive" alt="scissors_image">
      </div>
    </div>

  </div>

</div>

<hr class="featurette-divider">

<div class="row">

  <div class="col-sm-offset-4 col-sm-4">
    <div class="well">

      <!-- Insert button here -->

      <% if @result=="win" %>
      <!-- # win alert -->
      <div class="alert alert-success" role="alert">
      <p class="text-center"><h2 class="game_alert">You won!</h2> </p>
      </div>


      <% elsif @result=="lose" %>
      <!-- # lose alert -->
      <div class="alert alert-danger" role="alert">

        <p class="text-center">You lost!</p>
      </div>

      <% else %>
      <!-- #tie alert -->
      <div class="alert alert-warning" role="alert">  <p class="text-center">You tied !</p></div>
      <% end %>

    </div>

  </div>


</div>

</div>


